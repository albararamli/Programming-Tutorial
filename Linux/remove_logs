// This steps will delete the logs that generated by Apache and PHP daily

// create file ~/everyday.sh and write the following

PPP="/var/log/httpd/error_log-"$(date -d '1 day ago' +%Y%m%d) 
sudo rm -f $PPP
PPP="/var/log/httpd/error_log"
sudo rm -f $PPP

PPP="/var/log/httpd/access_log-"$(date -d '1 day ago' +%Y%m%d) 
sudo rm -f $PPP
PPP="/var/log/httpd/access_log"
sudo rm -f $PPP

// call crontab -e and write the follwing
00 00 * * * ~/everyday.sh
